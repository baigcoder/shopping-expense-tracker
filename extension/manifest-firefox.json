{
    "manifest_version": 3,
    "name": "Vibe Tracker ðŸ’¸",
    "version": "2.2.0",
    "description": "ðŸ”¥ Auto-track your online purchases & subscriptions! Get real-time spending alerts, sync with your dashboard, and stay on top of your money game. No cap! ðŸ’°",
    "short_name": "VibeTracker",
    "author": "Vibe Tracker Team",
    "homepage_url": "https://vibe-tracker-expense-genz.vercel.app",
    "permissions": [
        "storage",
        "activeTab",
        "notifications",
        "tabs"
    ],
    "host_permissions": [
        "https://*.amazon.com/*",
        "https://*.ebay.com/*",
        "https://*.walmart.com/*",
        "https://*.bestbuy.com/*",
        "https://*.target.com/*",
        "https://*.etsy.com/*",
        "https://*.aliexpress.com/*",
        "https://*.shopify.com/*",
        "https://*.daraz.pk/*",
        "https://*.foodpanda.pk/*",
        "https://*.buymeacoffee.com/*",
        "https://*.gumroad.com/*",
        "https://*.stripe.com/*",
        "https://*.paypal.com/*",
        "<all_urls>"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_title": "Vibe Tracker - Track Your Spending ðŸ’¸",
        "default_icon": {
            "16": "icons/icon16.png",
            "32": "icons/icon32.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "background": {
        "scripts": [
            "background.js"
        ],
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": [
                "https://*.vercel.app/*",
                "http://localhost:*/*",
                "http://127.0.0.1:*/*"
            ],
            "js": [
                "content-website.js"
            ],
            "run_at": "document_start"
        },
        {
            "matches": [
                "https://*.amazon.com/*",
                "https://*.ebay.com/*",
                "https://*.walmart.com/*",
                "https://*.bestbuy.com/*",
                "https://*.target.com/*",
                "https://*.etsy.com/*",
                "https://*.aliexpress.com/*",
                "https://*.daraz.pk/*",
                "https://*.foodpanda.pk/*",
                "https://*.buymeacoffee.com/*",
                "https://*.gumroad.com/*",
                "https://*.stripe.com/*",
                "https://*.paypal.com/*",
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ],
            "css": [
                "content.css"
            ],
            "run_at": "document_idle"
        }
    ],
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "content.css",
                "icons/icon16.png",
                "icons/icon32.png",
                "icons/icon48.png",
                "icons/icon128.png",
                "icons/logo.png"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ],
    "browser_specific_settings": {
        "gecko": {
            "id": "vibetracker@vibe-tracker.com",
            "strict_min_version": "109.0"
        }
    }
}